
@model IEnumerable<Movie>


<style>
    .card-square.mdl-card {
        width: 320px;
        margin: 10px;
        display: inline-table;
        background: #e8e6e6
    }

    .card-title {
        margin: 0px 0px 10px 15px;
    }

        .card-title span {
            font-size: 16px;
        }
</style>

<form action="#">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable">
        <label class="mdl-button mdl-js-button mdl-button--icon" for="sample6">
            <i class="material-icons">search</i>
        </label>
        <div class="mdl-textfield__expandable-holder">
            <input class="mdl-textfield__input" type="text" id="sample6">
            <label class="mdl-textfield__label" for="sample-expandable">Expandable Input</label>
        </div>
    </div>
</form>

@if (!Model.Any())
{
    <div id="p2" class="mdl-progress mdl-js-progress mdl-progress__indeterminate"></div>
}

@foreach (var movie in Model)
{
    <p>@movie.Title</p>

    foreach (var trailer in movie.Trailers)
    {

        <div class="card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
                <img src="@trailer.ThumbnailUrl" />
            </div>
            <div class="card-title mdl-card__title-text">
                <span class="mdl-card__title-text">@movie.Title</span>
            </div>
        </div>


        @*<iframe width="320" height="180" src="https://www.youtube.com/embed/@trailer.VideoId"></iframe>*@

        @*<a href="https://www.youtube.com/watch?v=@trailer.VideoId" target="_blank"><img src="@trailer.ThumbnailUrl" /></a>*@
    }
}